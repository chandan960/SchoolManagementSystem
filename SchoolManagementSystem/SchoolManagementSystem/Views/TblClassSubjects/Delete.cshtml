@model DatabaseAccess.TblClassSubject

@{
    ViewBag.Title = "Class Subject Delete";
}

<h4>@ViewBag.Title</h4>
<hr />

<h3>Are you sure you want to delete this?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            Class :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TblClass.ClassName)
        </dd>

        <dt>
            Subject :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TblSubject.SubjectName)
        </dd>
        <dt>
            Title :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassSubjectTitle)
        </dd>

        <dt>
            Status :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassSubjectStatus)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
