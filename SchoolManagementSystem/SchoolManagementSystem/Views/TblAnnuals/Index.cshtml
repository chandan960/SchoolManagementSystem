@model IEnumerable<DatabaseAccess.TblAnnual>

@{
    ViewBag.Title = "View All Annual List";
}

<h4>@ViewBag.Title</h4>
<hr />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Annual Information</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AnnualDescription)
                        </th>
                        <th>
                            Fees
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AnnualStatus)
                        </th>
                        <th>
                            User Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TblUser.UserName)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnnualTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnnualDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnnualFees)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnnualStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TblProgramme.ProgrammeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TblUser.UserFullName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.AnnualId }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.AnnualId }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.AnnualId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
