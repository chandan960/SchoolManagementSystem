@model DatabaseAccess.TblSubject

@{
    ViewBag.Title = "Subject Details";
}

<h4>@ViewBag.Title</h4>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            Subject :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubjectName)
        </dd>

        <dt>
            Registration Date :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubjectRegistrationDate)
        </dd>

        <dt>
            Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubjectDescription)
        </dd>

        <dt>
            User Name :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TblUser.UserFullName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SubjectId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
