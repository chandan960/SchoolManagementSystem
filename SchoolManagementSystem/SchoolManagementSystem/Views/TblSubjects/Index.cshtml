@model IEnumerable<DatabaseAccess.TblSubject>

@{
    ViewBag.Title = "View All Subjects List";
}

<h2>@ViewBag.Title</h2>
</hr>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Subject Information</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Subject Name
                        </th>
                        <th>
                            Registration Date
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            User Name
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectRegistrationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TblUser.UserName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.SubjectId }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>