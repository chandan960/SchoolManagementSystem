@model IEnumerable<DatabaseAccess.TblDesignation>

@{
    ViewBag.Title = "View All Designation List";
}

<h4>@ViewBag.Title</h4>
<hr />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Designation Information</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Designation
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            User Name
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DesignationTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DesignationStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TblUser.UserFullName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.DesignationId }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.DesignationId }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.DesignationId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
